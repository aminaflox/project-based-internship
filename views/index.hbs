    <!-- SEARCH -->
    <div class="main-div" id="main">
        <div class="search" id="search">
            <div class="dropsearch">
                <form action="/search" class="from" method="GET" id="form">
                    <div class="flight">
                        <label for="departFrom">From</label>
                        <input class="input" type="text" name="departFrom" id="departFrom" placeholder="from">
                    </div>
                    <div class="flight">
                        <label for="arriveTo">To</label>
                        <input class="input" type="text" name="arriveTo" id="arriveTo" placeholder="to">
                    </div>
                    <div class="flight">
                        <label for="departureDate">Depart</label>
                        <input class="input" type="date" name="departureDate" id="departureDate">
                    </div>
                    <div class="flight">
                        <label for="arrivalDate">Return</label>
                        <input class="input" type="date" name="arrivalDate" id="arrivalDate">
                    </div>
                    <div class="flight">
                        <label for="passengers">Passengers</label>
                        <input class="input" type="number" id="passengers" name="passengers" min="0" max="100" step="1" placeholder="passengers">
                    </div>

                        </label> --}}
                    </div>
                    <button type="submit" class="flsubmit" onclick="checkFormInputs()">search</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
  function checkFormInputs() {
    const form = document.getElementById("form");
    const df = document.getElementsByName("departFrom");
    const at = document.getElementsByName("arriveTo");
    const dd = document.getElementsByName("departureDate");
    const ad = document.getElementsByName("arrivalDate");
    const ps = document.getElementsByName("passengers");

    let isFormValid = true;

    if ([df, at, dd, ad, ps].every(inputs => inputs.length === df.length)) {
      for (let i = 0; i < df.length; i++) {
        if (df[i].value === "") {
          alert("Please enter a departure location");
          isFormValid = false;
          break;
        }else if (at[i].value===""){
          alert("Please enter a arrival location");
          isFormValid = false;
        }else if (dd[i].value===""){
          alert("Please enter a departure date");
          isFormValid = false;
        }else if (ad[i].value===""){
          alert("Please enter a arrival date");
          isFormValid = false;
        }else if (ps[i].value===""){
          alert("Please enter a number of travelers");
          isFormValid = false;
        }
      }
    } else {
      alert("whoops");
      isFormValid = false;
    }
    if (isFormValid) {
    form.submit();
    }
}
document.querySelector("form").addEventListener("submit", function(event) {
  if (!checkFormInputs()) {
    event.preventDefault(); // Prevent the form from submitting
  }
});


</script>